{
  "name": "rb-crm",
  "private": true,
  "version": "0.1.0",
  "description": "RB CRM - Example RevCRM Project",
  "main": "lib/index.js",
  "scripts": {
    "build-test": "npm run build-server",
    "build": "npm run build-server && npm run build-clientlibs && npm run build-client",
    "build-client": "run-bin webpack --mode production --config ./node_modules/revcrm/conf/webpack.client.config.js",
    "build-clientlibs": "run-bin webpack --mode production --config ./node_modules/revcrm/conf/webpack.clientlibs.config.js",
    "build-clientlibs-dev": "run-bin webpack --mode development --config ./node_modules/revcrm/conf/webpack.clientlibs.config.js",
    "build-server": "run-bin tslint -p . && rm -rf dist/ && run-bin tsc",
    "start": "cross-env NODE_ENV=production && node ./dist/server/server.js",
    "test": "",
    "watch-client": "run-bin webpack --mode development --config ./node_modules/revcrm/conf/webpack.client.config.js --watch",
    "watch-server": "run-bin NODE_ENV=development nodemon --watch 'src/**/*' -e ts,tsx --exec 'run-bin ts-node src/server.ts'",
    "client-webpack-stats": "run-bin webpack --mode production --config ./node_modules/revcrm/conf/webpack.client.config.js --profile --json > client-webpack-stats.json"
  },
  "author": "Russell Briggs <russ@paraflyer.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RevCRM/revcrm.git"
  },
  "typings": "lib/index.d.ts",
  "dependencies": {
    "revcrm": "0.1.0",
    "revcrm_accounts": "0.1.0",
    "revcrm_invoices": "0.1.0",
    "revcrm_products": "0.1.0"
  },
  "devDependencies": {
    "run-bin": "^1.0.0"
  }
}
