{
  "name": "revcrm",
  "version": "0.0.2",
  "description": "RevCRM - Open-source CRM solution built on RevJS",
  "main": "./dist/server.js",
  "repository": "https://github.com/RevCRM/revcrm.git",
  "author": "Russell Briggs <revcrm@paraflyer.net>",
  "license": "MIT",
  "scripts": {
    "build": "npm run build-server && npm run build-clientlibs && npm run build-client",
    "build-client": "cross-env NODE_ENV=production webpack --config ./conf/webpack.client.config.js",
    "build-clientlibs": "cross-env NODE_ENV=production webpack --config ./conf/webpack.clientlibs.config.js",
    "build-server": "tslint -p . && cross-env NODE_ENV=production tsc",
    "start": "node ./dist/server/server.js",
    "test": "",
    "watch-client": "cross-env NODE_ENV=development webpack --config ./conf/webpack.client.config.js --watch",
    "watch-server": "cross-env NODE_ENV=development nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' src/server/server.ts",
    "client-webpack-stats": "webpack --config ./conf/webpack.client.config.js --profile --json > client-webpack-stats.json",
    "sync-deps": "node ./scripts/sync-deps.js"
  },
  "dependencies": {
    "flexboxgrid": "6.3.1",
    "graphql": "^0.10.1",
    "graphql-server-koa": "^0.8.0",
    "graphql-type-json": "^0.1.4",
    "koa": "2.3.0",
    "koa-bodyparser": "4.2.0",
    "koa-mount": "3.0.0",
    "koa-passport": "4.0.1",
    "koa-router": "7.2.1",
    "koa-session": "5.5.0",
    "koa-static": "4.0.1",
    "material-ui": "0.19.4",
    "passport-local": "1.0.0",
    "prop-types": "15.6.0",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-redux": "5.0.6",
    "react-router-dom": "4.2.2",
    "react-tap-event-plugin": "3.0.2",
    "redux": "3.7.2",
    "redux-form": "7.1.1",
    "redux-thunk": "2.2.0",
    "rev-api": "0.0.1",
    "rev-forms": "0.0.1",
    "rev-forms-redux-mui": "0.0.1",
    "rev-models": "0.0.1",
    "source-map-support": "0.5.0"
  },
  "devDependencies": {
    "@types/koa": "2.0.39",
    "@types/koa-bodyparser": "3.0.25",
    "@types/koa-mount": "2.0.18",
    "@types/koa-passport": "2.0.4",
    "@types/koa-router": "7.0.23",
    "@types/koa-session": "3.0.5",
    "@types/koa-static": "3.0.1",
    "@types/material-ui": "0.18.3",
    "@types/node": "8.0.46",
    "@types/passport-local": "1.0.31",
    "@types/prop-types": "15.5.2",
    "@types/react": "16.0.18",
    "@types/react-dom": "16.0.2",
    "@types/react-redux": "5.0.10",
    "@types/react-router-dom": "4.0.8",
    "@types/react-tap-event-plugin": "0.0.30",
    "@types/redux-form": "7.0.6",
    "awesome-typescript-loader": "3.2.3",
    "copy-webpack-plugin": "4.2.0",
    "cross-env": "5.1.0",
    "fs-extra": "4.0.2",
    "nodemon": "1.12.1",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "tslint-loader": "3.5.3",
    "typescript": "2.5.3",
    "webpack": "3.8.1"
  }
}
