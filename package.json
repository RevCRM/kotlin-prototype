{
  "name": "revcrm",
  "version": "0.0.2",
  "description": "RevCRM - Open-source CRM solution built on RevJS",
  "main": "./dist/server.js",
  "repository": "https://github.com/RevCRM/revcrm.git",
  "author": "Russell Briggs <revcrm@paraflyer.net>",
  "license": "MIT",
  "scripts": {
    "build": "npm run build-server && npm run build-clientlibs && npm run build-client",
    "build-client": "webpack --mode production --config ./conf/webpack.client.config.js",
    "build-clientlibs": "webpack --mode production --config ./conf/webpack.clientlibs.config.js",
    "build-server": "tslint -p . && rm -rf dist/ && tsc",
    "start": "cross-env NODE_ENV=production && node ./dist/server/server.js",
    "test": "",
    "watch-client": "webpack --mode development --config ./conf/webpack.client.config.js --watch",
    "watch-server": "cross-env NODE_ENV=development nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' src/server/server.ts",
    "client-webpack-stats": "webpack --mode production --config ./conf/webpack.client.config.js --profile --json > client-webpack-stats.json",
    "sync-deps": "rm -r ./node_modules/rev-* && npm i"
  },
  "dependencies": {
    "bcrypt": "2.0.1",
    "graphql-server-koa": "1.3.6",
    "koa": "2.5.1",
    "koa-bodyparser": "4.2.1",
    "koa-mount": "3.0.0",
    "koa-passport": "4.1.0",
    "koa-router": "7.4.0",
    "koa-session": "5.8.1",
    "koa-static": "4.0.3",
    "material-ui": "1.0.0-beta.36",
    "material-ui-icons": "1.0.0-beta.36",
    "passport-local": "1.0.0",
    "prop-types": "15.6.1",
    "react": "16.4.0",
    "react-dom": "16.4.0",
    "react-redux": "5.0.7",
    "react-router-dom": "4.2.2",
    "redux": "4.0.0",
    "redux-thunk": "2.2.0",
    "rev-api": "../../revjs/packages/rev-api/rev-api-0.17.0.tgz",
    "rev-api-client": "../../revjs/packages/rev-api-client/rev-api-client-0.17.0.tgz",
    "rev-models": "../../revjs/packages/rev-models/rev-models-0.17.0.tgz",
    "rev-ui": "../../revjs/packages/rev-ui/rev-ui-0.17.0.tgz",
    "rev-ui-materialui": "../../revjs/packages/rev-ui-materialui/rev-ui-materialui-0.17.0.tgz",
    "source-map-support": "0.5.6"
  },
  "devDependencies": {
    "@types/bcrypt": "2.0.0",
    "@types/graphql": "0.13.1",
    "@types/koa": "2.0.45",
    "@types/koa-bodyparser": "4.2.0",
    "@types/koa-mount": "3.0.1",
    "@types/koa-passport": "4.0.1",
    "@types/koa-router": "7.0.28",
    "@types/koa-session": "5.7.3",
    "@types/koa-static": "4.0.0",
    "@types/node": "10.1.3",
    "@types/prop-types": "15.5.3",
    "@types/react": "16.3.14",
    "@types/react-dom": "16.0.5",
    "@types/react-redux": "6.0.0",
    "@types/react-router-dom": "4.2.6",
    "@types/react-tap-event-plugin": "0.0.30",
    "copy-webpack-plugin": "4.5.1",
    "cross-env": "5.1.6",
    "fs-extra": "6.0.1",
    "nodemon": "1.17.5",
    "ts-loader": "4.3.0",
    "ts-node": "6.0.5",
    "tslint": "5.10.0",
    "tslint-loader": "3.6.0",
    "typescript": "2.8.3",
    "webpack": "4.9.1",
    "webpack-cli": "2.1.4"
  }
}
